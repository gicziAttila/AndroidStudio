<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/consGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9">

    </androidx.constraintlayout.widget.Guideline>

    <ImageView
        android:id="@+id/kep"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@android:drawable/ic_menu_camera"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:background="@color/grey2">
    </ImageView>
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Image"
        app:layout_constraintTop_toBottomOf="@+id/kep"
        app:layout_constraintStart_toStartOf="@+id/kep"
        app:layout_constraintEnd_toEndOf="@+id/kep"
        android:layout_marginTop="5dp"
        android:padding="4dp"
        android:backgroundTint="@color/orange">
    </Button>
    <EditText
        android:id="@+id/fullNameEditT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@+id/kep"
        app:layout_constraintEnd_toStartOf="@+id/consGuideLine"
        app:layout_constraintTop_toTopOf="@+id/kep"
        android:background="@android:drawable/edit_text">
    </EditText>
    <TextView
        android:id="@+id/emailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        app:layout_constraintTop_toBottomOf="@+id/fullNameEditT"
        app:layout_constraintStart_toStartOf="@+id/fullNameEditT"
        android:layout_marginTop="5dp">
    </TextView>
    <EditText
        android:id="@+id/emailEditT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter your email"
        app:layout_constraintTop_toBottomOf="@+id/emailTitle"
        app:layout_constraintStart_toStartOf="@+id/emailTitle"
        app:layout_constraintEnd_toEndOf="@+id/consGuideLine"
        android:background="@android:drawable/edit_text"
        android:layout_marginTop="5dp">

    </EditText>
    <TextView
        android:id="@+id/phoneTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:"
        app:layout_constraintTop_toBottomOf="@+id/emailEditT"
        app:layout_constraintStart_toStartOf="@+id/emailEditT"
        android:layout_marginTop="5dp">
    </TextView>
    <EditText
        android:id="@+id/phoneNumberEditT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter your phone number"
        app:layout_constraintTop_toBottomOf="@+id/phoneTitle"
        app:layout_constraintStart_toStartOf="@+id/phoneTitle"
        app:layout_constraintEnd_toStartOf="@+id/consGuideLine"
        android:background="@android:drawable/edit_text"
        android:layout_marginTop="5dp">
    </EditText>
    <TextView
        android:id="@+id/addressTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumberEditT"
        app:layout_constraintStart_toStartOf="@+id/kep"
        android:layout_marginTop="10dp">
    </TextView>
    <EditText
        android:id="@+id/addressEditT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your address"
        app:layout_constraintTop_toBottomOf="@+id/addressTitle"
        app:layout_constraintStart_toStartOf="@+id/addressTitle"
        android:background="@android:drawable/edit_text"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
    </EditText>
    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintTop_toBottomOf="@+id/addressEditT"
        app:layout_constraintEnd_toStartOf="@+id/consGuideLine"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/red">
    </Button>
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintTop_toBottomOf="@+id/addressEditT"
        app:layout_constraintEnd_toStartOf="@+id/buttonDelete"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/blue">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>